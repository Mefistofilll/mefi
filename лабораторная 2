class Book:
    def __init__(self, title, author, year):
        self.title = title
        self.author = author
        self.year = year

    def __str__(self):
        return f"{self.title} by {self.author} ({self.year})"

    def __repr__(self):
        return f"Book('{self.title}', '{self.author}', {self.year})"


# Пример использования
b = Book("1984", "George Orwell", 1949)
print(b)        # Вывод: 1984 by George Orwell (1949)
print(repr(b))  # Вывод: Book('1984', 'George Orwell', 1949)
